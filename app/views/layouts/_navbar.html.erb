<div class="w-full h-16 fixed top-0 bg-gradient-to-r from-green-300 to-green-600"> 
  <div class="max-w-7xl w-full mx-auto h-full flex justify-between items-center">
    <%= link_to "/", class: "flex items-center gap-2" do %>
      <%= image_tag "plant.png", class: "w-8 object-cover" %>
      <p class="text-3xl text-green-900 font-wonder"> Home </p>
    <% end %>

    <% if current_user %>
      <div class="flex items-center gap-4">
        <%= link_to "Create meetup", new_meetup_path, class: "px-3 py-2 rounded-lg bg-green-600 text-green-50 border-2 border-green-300 hover:border-green-50 hover:bg-green-500 transition-all duration-250" %>
        <div class="relative" data-controller="dropdown">
          <%= link_to "#", data: { action: "dropdown#toggle" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 text-green-900">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
          <% end %>
          
          <div class="w-40 h-40 absolute top-12 bg-green-500 rounded-lg border-2 border-gray-700 hidden flex flex-col p-2" data-dropdown-target="menu"> 
            <%= link_to "Settings", edit_user_registration_path, class: "text-lg text-green-900" %>

            <%= link_to "Sign out", destroy_user_session_path, class: "text-lg text-green-900 px-3 px-2 rounded-full bg-green-400 border-2 border-gray-200 mr-auto mt-auto", data: { turbo_method: :delete } %>
          </div> 
        </div>
      </div>
    <% end %>
  </div>
</div>